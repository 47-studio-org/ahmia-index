{
	"crawlings": {
		"settings":{
      "index":{
         "analysis":{
            "analyzer":{
               "analyzer_shingle":{
                  "tokenizer": "standard",
                  "filter": ["standard", "lowercase", "filter_stop", "filter_shingle"]
               },
            },
            "filter":{
               "filter_shingle":{
                  "type":"shingle",
                  "max_shingle_size":5,
                  "min_shingle_size":2,
                  "output_unigrams":"true"
               },
               "filter_stop":{
                  "type":"stop",
                  "enable_position_increments":"false"
               }
            }
         }
      }
   },
		"mappings": {
			"tor": {
				"dynamic_templates": [
	        {
	          "indexed_strings": {
	            "match_mapping_type": "string",
	            "mapping": {
	              "type": "string",
	              "fields": {
	                "shingles": {
	                  "type": "string",
	                  "analyzer": "analyzer_shingle"
	                },
	                "stemming": {
	                  "type": "string",
	                  "analyzer": "english"
	                }
	              }
	            }
	          }
					}
				],
				"properties": {
					"url": {
						"type": "indexed_strings",
						"copy_to": "fancy"
					},
					"title": {
						"type": "indexed_strings",
						"copy_to": "fancy"
					},
					"meta": {
						"type": "indexed_strings",
						"copy_to": "fancy"
					},
					"anchors": {
						"type": "indexed_strings",
						"copy_to": "fancy"
					},
					"fancy": {
						"type": "indexed_strings",
					},

					"plain": {
						"type": "indexed_strings"
					},

					"domain": {
						"type": "string",
						"index": "not_analyzed"
					},
					"lang": {
						"type": "string",
						"index": "not_analyzed"
					},
					"mime": {
						"type": "string",
						"index": "not_analyzed"
					},

					"code": {
						"type": "int"
					},
					"is_fake": {
						"type": "boolean"
					},
					"is_banned": {
						"type": "boolean"
					},

					"created_on": {
						"type": "date",
						"format": "dateOptionalTime"
					},
					"updated_on": {
						"type": "date",
						"format": "dateOptionalTime"
					},
					"last_seen": {
						"type": "date",
						"format": "dateOptionalTime"
					},

					"authority": {
						"type": "double"
					},
					"visits": {
						"type": "long"
					},
					"clicks": {
						"type": "long"
					},
					"backlinks": {
						"type": "long"
					},
				}
			}
		}
	}
}
